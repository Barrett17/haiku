SubDir HAIKU_TOP src add-ons translators person ;

SetSubDirSupportedPlatformsBeOSCompatible ;

UsePrivateHeaders contact ;
UsePrivateHeaders shared ;

SubDirHdrs [ FDirName $(SUBDIR) $(DOTDOT) shared ] ;

AddResources PersonTranslator : PersonTranslator.rdef ;

local architectureObject ;
for architectureObject in [ MultiArchSubDirSetup ] {
	on $(architectureObject) {
		Translator [ MultiArchDefaultGristFiles PersonTranslator ] :
			PersonMain.cpp
			PersonTranslator.cpp
			PersonView.cpp
			: be translation
			[ MultiArchDefaultGristFiles libcontact.so ]
			[ MultiArchDefaultGristFiles libtranslatorsutils.a ]
			libshared.a	$(TARGET_LIBSUPC++) localestub
		: true
		;
	}
}
